<div id="banner" class="sticky top-0 z-10 w-full bg-yellow-300 py-2">
  <div class="flex justify-between px-4">
    <span></span>
    <p class="text-black">
      Website is still in development intro video and screenshots/videos for
      completed project coming soon!
    </p>
    <span id="close-btn" class="cursor-pointer">X</span>
  </div>
</div>

<script>
  const btn = document.querySelector("#close-btn");
  const banner = document.querySelector("#banner");

  function closeBanner() {
    banner.remove();
  }

  btn.addEventListener("click", closeBanner);
</script>
