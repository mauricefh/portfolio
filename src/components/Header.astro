---
import personal from "../data/personal.json";
import SocialLinks from "./SocialLinks.astro";
import Banner from "./Banner.astro";

const avatar = "/avatar.jpg";
const background_video = "/background.webm";
const background_fallback = "/background-fallback.webp";
---

<div class="relative h-screen w-full overflow-hidden">
  <video
    class="absolute inset-0 h-full w-full object-cover"
    autoplay
    muted
    loop
    playsinline
    poster={background_fallback}
  >
    <source src={background_video} type="video/webm" />
    <img src={background_fallback} alt="Description of video content" />
  </video>
  <main
    class="relative z-10 min-h-full flex flex-col items-center justify-center px-4"
  >
    <div
      class="max-w-4xl px-4 flex flex-col items-center justify-center text-center"
    >
      <img
        src={avatar}
        class="w-48 h-48 mb-4 object-cover border-4 border-white rounded-full"
      />
      <h1 class="text-5xl font-bold text-white">{personal.name}</h1>
      <p class="mt-4 text-2xl text-white">{personal.title}</p>
      <p class="mt-2 text-lg text-white/80">{personal.bio}</p>
      <SocialLinks />
      <Banner />
    </div>
  </main>
</div>
