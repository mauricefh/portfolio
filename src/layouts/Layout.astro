---
import "../styles/global.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Maurice Filiatreault - Full Stack Engineer specializing in React, TypeScript, and Node.js. View my portfolio of web applications and professional experience."
    />
    <meta name="author" content="Maurice Filiatreault" />
    <meta
      name="keywords"
      content="Full Stack Developer, React, TypeScript, Node.js, Web Development, Software Engineer"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mauricefh.com/" />
    <meta
      property="og:title"
      content="Maurice Filiatreault | Full Stack Engineer"
    />
    <meta
      property="og:description"
      content="Full Stack Engineer specializing in React, TypeScript, and Node.js. Building web applications with user experience at the core."
    />
    <meta property="og:image" content="https://mauricefh.com/avatar.avif" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://mauricefh.com/" />
    <meta
      property="twitter:title"
      content="Maurice Filiatreault | Full Stack Engineer"
    />
    <meta
      property="twitter:description"
      content="Full Stack Engineer specializing in React, TypeScript, and Node.js. Building web applications with user experience at the core."
    />
    <meta
      property="twitter:image"
      content="https://mauricefh.com/avatar.avif"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://mauricefh.com/" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />
    <title>Maurice Filiatreault | Full Stack Engineer Portfolio</title>
  </head>
  <body>
    <slot />
  </body>
</html>
